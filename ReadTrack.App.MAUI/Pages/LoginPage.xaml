<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ReadTrack.App.MAUI.ViewModels"
    xmlns:view="clr-namespace:ReadTrack.App.MAUI.Views"
    Shell.NavBarIsVisible="False"    
    x:Class="ReadTrack.App.MAUI.Pages.LoginPage"    
    x:DataType="vm:LoginViewModel">    
    <Grid 
        RowDefinitions="Auto, Auto, Auto, Auto, Auto"
        ColumnDefinitions="Auto, *">
        <view:HeaderView
            Grid.ColumnSpan="2"
            ViewTitle="Please Login" />
        
        <Label 
            Grid.Row="1"
            Text="Email" />
        <Entry
            Grid.Row="1"
            Grid.Column="1"
            Keyboard="Email"
            Text="{Binding Email}" />

        <Label
            Grid.Row="2"
            Text="Password" />
        <Entry
            Grid.Row="2"
            Grid.Column="1"
            IsPassword="True"
            Text="{Binding Password}" />
        
        <Label 
            Grid.Row="3"
            Text="Register" />

        <FlexLayout
            Grid.Row="4"
            Grid.Column="1"
            Direction="Row"
            JustifyContent="End">
            <Button Text="Login" Command="{Binding LoginCommand}" />    
        </FlexLayout>
    </Grid>
</ContentPage>