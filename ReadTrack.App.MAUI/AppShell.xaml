<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ReadTrack.App.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ReadTrack.App.MAUI.ViewModels"
    xmlns:pages="clr-namespace:ReadTrack.App.MAUI.Pages"
    x:DataType="vm:MenuViewModel"
    Shell.FlyoutBehavior="Flyout"
    Title="ReadTrack.App.MAUI">

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate pages:DashboardPage}"
        Route="DashboardPage" />

    <MenuItem Text="Books" Command="{Binding MenuItemCommand}" CommandParameter="Books" />
    <MenuItem Text="Profile" Command="{Binding MenuItemCommand}" CommandParameter="Profile" />
    <MenuItem Text="Log Out" Command="{Binding MenuItemCommand}" CommandParameter="LogOut"  />
</Shell>
